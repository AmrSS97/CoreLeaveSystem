@model CoreLeaveSystem.Models.CreateVacationRequestVM

@{
    ViewData["Title"] = "Create";

}

<h1>Vacation Application</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VacationTypeId" class="control-label"></label>
                @Html.DropDownListFor(q => q.VacationTypeId, new SelectList(Model.VacationTypes, "Value", "Text"), "Select Vacation Type", new { @class = "form-control" })
                <span asp-validation-for="VacationTypeId" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="StartDate" class="control-label"></label>
                        <input asp-for="StartDate" class="form-control datepicker" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="EndDate" class="control-label"></label>
                        <input asp-for="EndDate" class="form-control datepicker" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Request Vacation" class="btn btn-primary btn-block" />
            </div>
            <div class="form-group">
                    <a asp-action="Index" class="btn btn-secondary btn-block">Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts 
{
    <script>
  $( function() {
      $(".datepicker").datepicker({
          dateFormat: "yy-mm-dd"
      });
  } );
    </script>
}
