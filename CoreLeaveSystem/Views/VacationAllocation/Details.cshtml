@model CoreLeaveSystem.Models.ViewAllocationVM

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details For - @Model.Employee.Firstname @Model.Employee.Lastname</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Fullname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Fullname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.BirthDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.BirthDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Gender)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="ListEmployees" class="btn btn-secondary btn-block">Back to List</a>
</div>

<hr />
<h2>Vacation Allocations</h2>

    <div class="card" style="width: 18rem;">
        <ul class="list-group list-group-flush">
            @foreach (var item in Model.VacationAllocations)
            {
                <li class="list-group-item">
                    <h6>
                        @item.VacationType.Name <span class="badge badge-secondary">@item.NumberOfDays</span>
                        <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="fa fa-pencil" aria-hidden="true"></i> Edit
                        </a>
                    </h6>
                </li>
            }
        </ul>
    </div>

